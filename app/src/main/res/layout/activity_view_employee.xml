<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ViewEmployeeActivity">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="265dp"
        android:layout_height="53dp"
        android:layout_marginStart="118dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="117dp"
        android:fontFamily="serif-monospace"
        android:text="Edit User Details"
        android:textAlignment="center"
        android:textColor="#FF5722"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:layout_width="369dp"
        android:layout_height="476dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="185dp"
        android:backgroundTint="#E6CDCD"
        app:cardCornerRadius="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:layout_marginTop="10dp"
            android:fontFamily="serif-monospace"
            android:text="User ID"
            android:textAlignment="center"
            android:textColor="#131313"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/view_employee_user_ID"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:layout_marginTop="60dp"
            android:fontFamily="serif-monospace"
            android:text="TextView"
            android:textAlignment="center"
            android:textColor="#0E60DA"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:layout_marginTop="100dp"
            android:fontFamily="serif-monospace"
            android:text="First Name"
            android:textAlignment="center"
            android:textColor="#151515"
            android:textSize="24sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/view_employee_first_name"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:layout_marginTop="130dp"
            android:ems="10"
            android:fontFamily="serif-monospace"
            android:inputType="textPersonName"
            android:text="Name"
            android:textAlignment="center"
            android:textColor="#E3431B"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:layout_marginTop="180dp"
            android:fontFamily="serif-monospace"
            android:text="Last Name"
            android:textAlignment="center"
            android:textColor="#151515"
            android:textSize="24sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/view_employee_last_name"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:layout_marginTop="210dp"
            android:ems="10"
            android:fontFamily="serif-monospace"
            android:inputType="textPersonName"
            android:text="Name"
            android:textAlignment="center"
            android:textColor="#E3431B"
            android:textSize="24sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/textView10"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:layout_marginTop="260dp"
            android:fontFamily="serif-monospace"
            android:text="Address"
            android:textAlignment="center"
            android:textColor="#151515"
            android:textSize="24sp"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/view_employee_address"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:layout_marginTop="290dp"
            android:ems="10"
            android:fontFamily="serif-monospace"
            android:inputType="text"
            android:text="Address"
            android:textAlignment="center"
            android:textColor="#E3431B"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:layout_marginTop="340dp"
            android:fontFamily="serif-monospace"
            android:text="Phone Number"
            android:textAlignment="center"
            android:textColor="#151515"
            android:textSize="24sp"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/view_employee_phone_number"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:layout_marginTop="380dp"
            android:ems="10"
            android:fontFamily="serif-monospace"
            android:inputType="text"
            android:text="Number"
            android:textAlignment="center"
            android:textColor="#E3431B"
            android:textSize="24sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/textView12"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:layout_marginTop="420dp"
            android:fontFamily="serif-monospace"
            android:text="NIC"
            android:textAlignment="center"
            android:textColor="#151515"
            android:textSize="24sp"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/view_employee_nic"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:layout_marginTop="460dp"
            android:ems="10"
            android:fontFamily="serif-monospace"
            android:inputType="text"
            android:text="Number"
            android:textAlignment="center"
            android:textColor="#E3431B"
            android:textSize="24sp"
            android:textStyle="bold" />


    </androidx.cardview.widget.CardView>


    <Button
        android:id="@+id/update_employee_btn"
        android:layout_width="201dp"
        android:layout_height="63dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="600dp"
        android:layout_marginEnd="149dp"
        android:layout_marginBottom="103dp"
        android:backgroundTint="#8DD5EA"
        android:fontFamily="serif-monospace"
        android:text="Update"
        android:textColor="#EC5252"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>