<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/loginbg"
    tools:context=".ViewSupplierActivity">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="265dp"
        android:layout_height="53dp"
        android:layout_marginStart="118dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="117dp"
        android:fontFamily="casual"
        android:text="Edit User Details"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:layout_width="369dp"
        android:layout_height="506dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="26dp"
        android:layout_marginBottom="7dp"
        android:backgroundTint="#E8E1E1"
        app:cardCornerRadius="30dp"
        app:layout_constraintBottom_toTopOf="@+id/update_supplier_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:layout_marginTop="10dp"
            android:fontFamily="casual"
            android:text="User ID"
            android:textAlignment="center"
            android:textColor="#131313"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/view_supplier_user_ID"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:layout_marginTop="60dp"
            android:fontFamily="casual"
            android:textAlignment="center"
            android:textColor="#428bca"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:layout_marginTop="100dp"
            android:fontFamily="casual"
            android:text="First Name"
            android:textAlignment="center"
            android:textColor="#151515"
            android:textSize="24sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/view_supplier_first_name"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:layout_marginTop="130dp"
            android:ems="10"
            android:fontFamily="casual"
            android:inputType="textPersonName"
            android:text="first name"
            android:textAlignment="center"
            android:textColor="#428bca"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:layout_marginTop="180dp"
            android:fontFamily="casual"
            android:text="Last Name"
            android:textAlignment="center"
            android:textColor="#151515"
            android:textSize="24sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/view_supplier_last_name"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:layout_marginTop="210dp"
            android:ems="10"
            android:fontFamily="casual"
            android:inputType="textPersonName"
            android:text="Name"
            android:textAlignment="center"
            android:textColor="#428bca"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:layout_marginTop="260dp"
            android:fontFamily="casual"
            android:text="Address"
            android:textAlignment="center"
            android:textColor="#151515"
            android:textSize="24sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/view_supplier_address"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:layout_marginTop="290dp"
            android:ems="10"
            android:fontFamily="casual"
            android:inputType="text"
            android:text="Address"
            android:textAlignment="center"
            android:textColor="#428bca"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:layout_marginTop="340dp"
            android:fontFamily="casual"
            android:text="Phone Number"
            android:textAlignment="center"
            android:textColor="#151515"
            android:textSize="24sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/view_supplier_phone_number"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:layout_marginTop="380dp"
            android:ems="10"
            android:fontFamily="casual"
            android:inputType="text"
            android:text="Number"
            android:textAlignment="center"
            android:textColor="#428bca"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:layout_marginTop="420dp"
            android:fontFamily="casual"
            android:text="NIC"
            android:textAlignment="center"
            android:textColor="#151515"
            android:textSize="24sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/view_supplier_nic"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:layout_marginTop="460dp"
            android:ems="10"
            android:fontFamily="casual"
            android:inputType="text"
            android:text="Number"
            android:textAlignment="center"
            android:textColor="#428bca"
            android:textSize="24sp"
            android:textStyle="bold" />


    </androidx.cardview.widget.CardView>


    <Button
        android:id="@+id/update_supplier_btn"
        android:layout_width="201dp"
        android:layout_height="63dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="600dp"
        android:layout_marginEnd="149dp"
        android:layout_marginBottom="103dp"
        android:backgroundTint="#428bca"
        android:fontFamily="casual"
        android:text="Update"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />


</androidx.constraintlayout.widget.ConstraintLayout>